{% extends "layout.html.jinja" %}

{% block title %}Roles de "{{ user.username }}"{% endblock %}

{% block main %}
<h1>Gestión de roles para usuario "{{ user.username }}"</h1>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add_modal">
  <i class="bi bi-plus-lg"></i>
  Agregar rol
</button>

<!-- List -->
{% if user_roles_count > 0 %}
  <table class="table table-dark table-striped table-bordered table-hover table-responsive mt-3 align-middle">
    <thead>
      <tr>
        <th scope="col">Rol</th>
        <th scope="col">Institución</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {% for ur in user_roles %}
        <tr>
          <td>{{ ur.role.name }}</td>
          <td>{% if ur.inst %}{{ ur.inst.name }}{% else %}(no aplica){% endif %}</td>
          <td>
            {% if ur.role.name != "Super Administrador" %}
              <a class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#remove_modal_{{ ur.id }}"><i class="bi bi-trash"></i></a>
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <h2 class="mt-3">No hay ningún rol para mostrar</h2>
{% endif %}

<!-- Add -->
<div class="modal modal-lg fade" id="add_modal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5">Agregar rol</h1>
      </div>
      <form action="{{ url_for('user.role.add', userid=user.id) }}" method="post">
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-md-6">
              <label for="add_role_select" class="form-label">Rol:</label>
              <select class="form-select" id="add_role_select" name="roleid">
                {% for r in roles %}
                  {% if r.name != "Super Administrador" %}
                    <option value="{{ r.id }}">{{ r.name }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
            <div class="col-md-6">
              <label for="add_inst_select" class="form-label">Institución:</label>
              <select class="form-select" id="add_inst_select" name="instid">
                {% for i in insts %}
                  <option value="{{ i.id }}">{{ i.name }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <button type="submit" class="btn btn-success">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Remove -->
{% for ur in user_roles %}
  <div class="modal modal-lg fade" id="remove_modal_{{ ur.id }}" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Eliminar rol</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="{{ url_for('user.role.remove', userid=user.id, roleid=ur.role.id, instid=(ur.inst and ur.inst.id)) }}" method="post">
          <div class="modal-body">
            <p class="mb-0">¿Está seguro que desea eliminar el rol "{{ ur.role.name }}" en la institución "{{ ur.inst.name }}"?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-danger">Aceptar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endfor %}

{% endblock %}