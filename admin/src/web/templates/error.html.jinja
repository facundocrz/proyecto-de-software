    }

    @keyframes moveText {
        from {
            transform: translateY(-5px);
        }

        to {
            transform: translateY(5px);
        }
    }
</style>

<script>
    // JavaScript para mostrar ambos mensajes al mismo tiempo
    document.addEventListener('DOMContentLoaded', function () {
        const message1 = document.querySelector('.message-1');
